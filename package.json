{
  "name": "bcm_convertor",
  "version": "1.2.0",
  "description": "将自己在kitten3/4上的作品快速制作成独立应用程序",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/sf-yuzifu/bcm_convertor.git"
  },
  "author": "小鱼yuzifu",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "sweetalert": "^2.1.2"
  },
  "config": {},
  "build": {
    "productName": "编程猫格式工厂",
    "appId": "com.bcm_convertor.yzf",
    "copyright": "小鱼yuzifu",
    "directories": {
      "output": "build"
    },
    "asar": false,
    "mac": {
      "icon": "icon/icon-windowed",
      "target": {
        "target": "dir",
        "arch": "universal"
      }
    },
    "win": {
      "icon": "icon/icon-windowed",
      "target": {
        "target": "portable",
        "arch": "ia32"
      }
    },
    "linux": {
      "icon": "icon/icon-windowed",
      "target": {
        "target": "AppImage",
        "arch": "x64"
      }
    }
  }
}